# ===========================================
# SYSTEM CRAWLER BACKEND - ENVIRONMENT VARIABLES
# ===========================================

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Port để chạy server (mặc định: 5000)
PORT=5000

# Môi trường chạy (development, production, test)
NODE_ENV=development

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB Connection String (Development)
MONGODB_URI=mongodb://localhost:27017/system-crawler

# MongoDB Connection String (Production) - Sử dụng MongoDB Atlas
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/system-crawler?retryWrites=true&w=majority

# ===========================================
# JWT CONFIGURATION
# ===========================================
# Secret key để ký JWT tokens (thay đổi thành key mạnh và bảo mật)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Thời gian hết hạn của JWT token (mặc định: 7 ngày)
JWT_EXPIRES_IN=7d

# ===========================================
# EMAIL CONFIGURATION (SMTP)
# ===========================================
# SMTP Host (Gmail: smtp.gmail.com)
SMTP_HOST=smtp.gmail.com

# SMTP Port (Gmail: 587, SSL: 465)
SMTP_PORT=587

# SMTP Username (email address)
SMTP_USER=your-email@gmail.com

# SMTP Password (App Password cho Gmail)
SMTP_PASS=your-app-password

# Tên hiển thị khi gửi email
EMAIL_FROM_NAME=System Crawler

# URL Frontend để tạo link reset password
FRONTEND_URL=http://localhost:3000

# ===========================================
# RATE LIMITING
# ===========================================
# Thời gian window cho rate limiting (milliseconds, mặc định: 15 phút)
RATE_LIMIT_WINDOW_MS=900000

# Số request tối đa trong window (mặc định: 100)
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CRAWLER CONFIGURATION
# ===========================================
# Tắt tự động cleanup (true/false, mặc định: false)
DISABLE_AUTO_CLEANUP=false

# ===========================================
# SECURITY
# ===========================================
# CORS Origin cho production (true/false hoặc domain cụ thể)
# Trong development: false (cho phép tất cả)
# Trong production: https://yourdomain.com
CORS_ORIGIN=false

# ===========================================
# LOGGING
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=debug

# ===========================================
# FILE UPLOAD
# ===========================================
# Kích thước file upload tối đa (bytes, mặc định: 10MB)
MAX_FILE_SIZE=10485760

# ===========================================
# ACTOR CONFIGURATION
# ===========================================
# Thời gian timeout cho actor execution (milliseconds)
ACTOR_TIMEOUT=300000

# Số lượng actor chạy đồng thời tối đa
MAX_CONCURRENT_ACTORS=5

# ===========================================
# CACHE CONFIGURATION
# ===========================================
# Redis URL (nếu sử dụng Redis cho cache)
# REDIS_URL=redis://localhost:6379

# ===========================================
# MONITORING
# ===========================================
# API Key cho monitoring service (nếu có)
# MONITORING_API_KEY=your-monitoring-api-key

# ===========================================
# NOTES
# ===========================================
# 1. Thay đổi tất cả các giá trị mặc định trước khi deploy production
# 2. Sử dụng strong passwords và secrets
# 3. Không commit file .env vào Git
# 4. Sử dụng App Password cho Gmail thay vì password thường
# 5. Backup database thường xuyên
# 6. Monitor logs và performance
