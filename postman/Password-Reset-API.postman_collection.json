{
    "info": {
        "name": "Password Reset API",
        "description": "Collection để test API quên mật khẩu",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000/api",
            "type": "string"
        },
        {
            "key": "testEmail",
            "value": "test@example.com",
            "type": "string"
        },
        {
            "key": "resetToken",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "1. Gửi mã xác nhận quên mật khẩu",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"{{testEmail}}\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/forgot-password",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "forgot-password"
                    ]
                },
                "description": "Gửi mã xác nhận đến email của người dùng"
            },
            "response": []
        },
        {
            "name": "2. Xác thực mã xác nhận",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"{{testEmail}}\",\n  \"token\": \"{{resetToken}}\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/verify-reset-code",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "verify-reset-code"
                    ]
                },
                "description": "Xác thực mã xác nhận từ email"
            },
            "response": []
        },
        {
            "name": "3. Đặt lại mật khẩu",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"{{testEmail}}\",\n  \"token\": \"{{resetToken}}\",\n  \"newPassword\": \"newpassword123\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/reset-password",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "reset-password"
                    ]
                },
                "description": "Đặt lại mật khẩu với mã xác nhận đã được xác thực"
            },
            "response": []
        },
        {
            "name": "4. Kiểm tra trạng thái token",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/auth/check-token-status?email={{testEmail}}&token={{resetToken}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "check-token-status"
                    ],
                    "query": [
                        {
                            "key": "email",
                            "value": "{{testEmail}}"
                        },
                        {
                            "key": "token",
                            "value": "{{resetToken}}"
                        }
                    ]
                },
                "description": "Kiểm tra xem token có còn hợp lệ hay không"
            },
            "response": []
        },
        {
            "name": "5. Test - Email không hợp lệ",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"invalid-email\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/forgot-password",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "forgot-password"
                    ]
                },
                "description": "Test validation với email không hợp lệ"
            },
            "response": []
        },
        {
            "name": "6. Test - Mật khẩu quá ngắn",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"{{testEmail}}\",\n  \"token\": \"fake-token\",\n  \"newPassword\": \"123\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/reset-password",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "reset-password"
                    ]
                },
                "description": "Test validation với mật khẩu quá ngắn"
            },
            "response": []
        },
        {
            "name": "7. Test - Token không hợp lệ",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"{{testEmail}}\",\n  \"token\": \"fake-token-123\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/verify-reset-code",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "verify-reset-code"
                    ]
                },
                "description": "Test với token không hợp lệ"
            },
            "response": []
        }
    ]
}